<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/SearchText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:imeOptions="actionSearch" android:inputType="text"/>

        <ImageButton
            android:id="@+id/SearchButton1"
            android:layout_width="88dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_search_category_default" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViewinSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >
         	<ImageButton
            android:id="@+id/tweetButton_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/ic_menu_tweet" />
        
	
	<ImageButton
            android:id="@+id/refreshButtonInSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_menu_refresh" 
            android:background="@null"/>
     

    </LinearLayout>

</LinearLayout>